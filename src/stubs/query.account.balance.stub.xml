    <soapenv:Header/>
    <soapenv:Body>
        <ars:QueryTotalBalanceRequestMsg>
            <RequestHeader>
                <cbs:Version>1</cbs:Version>
                <cbs:BusinessCode>1</cbs:BusinessCode>
                <cbs:MessageSeq>{{trans_id}}</cbs:MessageSeq>
                <cbs:OwnershipInfo>
                    <cbs:BEID>101</cbs:BEID>
                </cbs:OwnershipInfo>
                <cbs:AccessSecurity>
                    <cbs:LoginSystemCode>{{username}}</cbs:LoginSystemCode>
                    <cbs:Password>{{password}}</cbs:Password>
                </cbs:AccessSecurity>
                <cbs:MsgLanguageCode>2003</cbs:MsgLanguageCode>
            </RequestHeader>
            <QueryTotalBalanceRequest>
                <ars:QueryObj>
                    <ars:AcctAccessCode>
                        <arc:AccountCode>{{account}}</arc:AccountCode>
                    </ars:AcctAccessCode>
                </ars:QueryObj>
            </QueryTotalBalanceRequest>
        </ars:QueryTotalBalanceRequestMsg>
    </soapenv:Body>
</soapenv:Envelope>